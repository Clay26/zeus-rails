<%# _form.html.erb %>
<%= form_with(model: exercise, local: true, class: "space-y-8") do |form| %>
  <% if exercise.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-lg font-medium text-red-800">
            <%= pluralize(exercise.errors.count, "error") %> prohibited this exercise from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% exercise.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :name, class: "block text-lg font-medium text-gray-700 mb-2" %>
    <%= form.text_field :name,
                        class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-6">
    <%= form.label :category, class: "block text-lg font-medium text-gray-700 mb-2" %>
    <%= form.select :category,
                    ExerciseCategories::EXERCISE_CATEGORIES,
                    {},
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-6">
    <%= form.label :description, class: "block text-lg font-medium text-gray-700 mb-2" %>
    <%= form.text_area :description,
                       rows: 4,
                       class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex items-center justify-end gap-4">
    <%= link_to 'Cancel', exercises_path,
                class: "bg-white hover:bg-gray-50 text-gray-700 font-lg py-2 px-4 border border-gray-300 rounded" %>

    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
