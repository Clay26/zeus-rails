<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <!-- Navigation Bar -->
  <nav class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <div class="flex-shrink-0 flex items-center">
            <svg class="h-8 w-8 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h.5A2.5 2.5 0 0020 5.5v-1.5" strokeLinecap="round" strokeLinejoin="round" strokeWidth="2"/>
            </svg>
            <span class="ml-2 text-xl font-bold text-gray-900">Zeus</span>
          </div>
        </div>
      </div>
    </div>
  </nav>
 
  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-16">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">
          Welcome to <span class="text-indigo-600">Zeus</span>
        </h1>
        <p class="mt-6 max-w-lg mx-auto text-xl text-gray-500">
          Harness the power of the gods for your digital needs.
        </p>
        
        <div class="mt-10 max-w-sm mx-auto bg-white shadow rounded-lg overflow-hidden">
          <div class="px-6 py-8">
            <% if user_signed_in? %>
              <div class="text-center">
                <div class="h-20 w-20 rounded-full bg-indigo-100 mx-auto flex items-center justify-center">
                  <svg class="h-10 w-10 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
                <h2 class="mt-4 text-lg font-medium text-gray-900">
                  Hello, <%= current_user.email %>!
                </h2>
                <p class="mt-2 text-sm text-gray-500">
                  We're glad to see you back.
                </p>
                <div class="mt-6">
                  <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                </div>
              </div>
            <% else %>
              <div>
                <h2 class="text-lg font-medium text-center text-gray-900">
                  Get Started
                </h2>
                <div class="mt-6 grid grid-cols-2 gap-3">
                  <div>
                    <%= link_to 'Sign Up', new_user_registration_path, class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                  </div>
                  <div>
                    <%= link_to 'Login', new_user_session_path, class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <!-- Footer -->
  <footer class="bg-white">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="border-t border-gray-200 pt-8 md:flex md:items-center md:justify-between">
        <div class="mt-8 md:mt-0 md:order-1">
          <p class="text-center text-base text-gray-400">
            &copy; <%= Date.today.year %> Zeus, Inc. All rights reserved.
          </p>
        </div>
      </div>
    </div>
  </footer>
</div>
